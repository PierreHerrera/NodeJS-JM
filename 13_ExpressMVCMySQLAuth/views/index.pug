extends layout

block content
  main.container
    h1.text-center= title
    div.text-right
      a.add-button(href=`/add`) Agregar Tarea
      a.delete-button(href=`/logout`) Cerrar Sesi√≥n
    ul.task-list
      if tasks.length === 0
        li
          b.text-center No tienes tareas por hacer
      else 
        each task in tasks
          li(class=task.completed ? "completed" : "")
            a(href=`/edit/${task.id}`) #{task.title}
            if task.completed
              a.uncomplete-button(href=`/uncomplete/${task.id}`) Desmarcar
            else
              a.uncomplete-button(href=`/complete/${task.id}`) Marcar
            a.delete-button(href=`/delete/${task.id}`) Eliminar

        
